extends layout
block content
	link(rel="stylesheet", href="/stylesheets/about.css")
	.contact.col-sm-12
		.contact-header.col-sm-10.col-sm-offset-1
			h1.col-sm-12.text-center(style='padding:0;color:#1abc9c;') Contact Us
			.col-sm-12.contact-details
				h1 
				p Give us a call or just attend one of our great services.
				hr
				p
					span.span Phone  
					span | +2348038017249
				p
					span.span Address
					span  | 33 Udemezue Street, Off Water Works road, Abakaliki, Nigeria.
				span
					span.span Email
					span  | info@rccglighthouse.com.ng
		.form.col-sm-10.col-sm-offset-1
			form(action="/contact" Method='POST').col-sm-12
				if(errors)
					each error in errors
						p.bg-danger=error.msg
				.form-left.col-sm-6
					.form-group
						label First Name
						input.form-control(type='text' name='fname' value=fname? fname : '' required)
					.form-group
						label Last Name
						input.form-control(type="text" name='lname' value=lname? lname : '' required)
					.form-group
						label Your Email
						input.form-control(type="email" name='email' value=email? email : '' required)
				.form-right.col-sm-6
					.form-group
						label(for="msg") Your Message
						textarea(name="msg", cols="65", rows="10" class=errors && errors.param == msg ? bg-danger : "" value=msg? msg : '' required)
				button.btn.btn-default.center-block Submit
